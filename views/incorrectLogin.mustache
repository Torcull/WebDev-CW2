<html>
<head>
    {{>header}}
</head>
<body class="container">
    <h1>{{title}}</h1>
    {{>navbar}}
    <div style="margin-bottom:2em;margin-left:1em;width:100%;">
        <h1>Login</h1>
    </div>
    <div id="formContent">
        <form method="POST" action="/login">
            <div class="form-group">
                <div class="col-sm-10">
                    <label for="username" class="col-sm-2 col-formlabel mb-4">
                        User Name
                    </label>
                    <input type="text" id="username" name="username" placeholder="username" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <label for="password" class="col-sm-2 col-formlabel mb-4">
                        Password
                    </label>
                    <input type="password" id="password" name="password" placeholder="password" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <label for="submit" class="col-sm-2 col-formlabel mb-4">
                    </label>
                    <input type="submit" value="Login" class="btn btn-primary" style="width:100px;">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <h4 style="color:red;">*Incorrect user name of password*</h4>
                </div>
            </div>
        </form>
    </div>

</body>
</html>